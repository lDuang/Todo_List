{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": false,
    "lib": ["ES2022", "DOM"],
    "types": ["electron", "node"],
    "rootDir": ".",
    "outDir": "../dist/electron"
  },
  "include": ["main.ts", "preload.js"]
}
