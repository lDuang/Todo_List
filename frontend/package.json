{
  "name": "Todo_List",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.example.todolist",
    "productName": "Todo List",
    "publish": null,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/electron/**/*",
      "dist/index.html",
      "dist/assets/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "dev": "vite",
    "lint": "eslint .",
    "preview": "vite preview --port 3000",
    "build": "tsc -b && vite build",
    "build:all": "pnpm build:vite && pnpm build:electron",
    "build:vite": "tsc -b && vite build",
    "build:electron": "tsc -p electron/tsconfig.electron.json && esbuild electron/preload.ts --bundle --platform=node --format=cjs --outfile=dist/electron/preload.js --external:electron",
    "start:dev": "electron dist/electron/main.js --dev",
    "start:prod": "cross-env NODE_ENV=production electron dist/electron/main.js",
    "electron:dev": "concurrently \"pnpm dev\" \"wait-on tcp:3000 && pnpm build:electron && pnpm start:dev\"",
    "electron:build": "cross-env ELECTRON_BUILDER_BINARIES_MIRROR=https://npm.taobao.org/mirrors/electron-builder-binaries/ CSC_IDENTITY_AUTO_DISCOVERY=false pnpm build:all && electron-builder",
    "electron": "pnpm build:all && pnpm start:prod"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-router": "^1.132.33",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.1.6",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.52.1",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@hookform/resolvers": "~3.10.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router-devtools": "^1.132.37",
    "@tanstack/router-vite-plugin": "^1.132.37",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^9.0.1"
  }
}
